    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.1",
    "happy-dom": "^17.6.3",
    "knip": "^5.60.2",
    "prettier": "^3.5.3",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^38.0.0",
